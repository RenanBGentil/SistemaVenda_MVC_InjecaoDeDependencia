@model SistemaVendas_MVC.Models.VendedorModel;

<h2>Cadastro de Vendedores</h2>
<hr />
<form asp-controller="Vendedor" asp-action="Cadastro" method="post">
    <input type="hidden" asp-for="Id" value=" @Model.Id" />

    <div class="form-group">
        <label>Nome</label>
        <input type="text" asp-for="Nome" class="form-control" value=" @try{ @ViewBag.Vendedor.Nome} catch{ }" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Email</label>
        <input type="text" asp-for="Email" class="form-control" value=" @try{ @ViewBag.Vendedor.Email} catch{ }" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-block btn-success">Registrar</button>
</form>

